<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/urlEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:paddingEnd="40dp"
        android:drawableStart="@drawable/url_left_background"
        android:drawablePadding="20dp"
        android:ems="10"
        android:inputType="textUri"
        android:background="@drawable/url_background"
        android:textColor="@color/ocean"
        android:selectAllOnFocus="true" />

    <RelativeLayout
        android:id="@+id/urlLeftContainer"
        android:visibility="gone"
        android:background="@drawable/url_left_background"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/insecureIcon"
            style="?attr/urlBarIconStyle"
            android:src="@drawable/icon_lock_insecure_network"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/microphoneButton"
        style="?attr/urlBarIconStyle"
        android:layout_gravity="end"
        android:tint="@color/dusk"
        android:src="@drawable/ic_icon_microphone" />
</merge>
