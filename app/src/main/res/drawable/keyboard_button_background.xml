<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/keyboard_key_rounded_corner" />
            <solid android:color="@color/spark" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/keyboard_key_rounded_corner" />
            <solid android:color="@color/ocean" />
        </shape>
    </item>
    <item android:color="@color/twilight" android:state_hovered="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/keyboard_key_rounded_corner" />
            <solid android:color="@color/twilight" />
        </shape>
    </item>
</selector>
