<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/keyboard_key_rounded_corner" />
            <solid android:color="@color/fog" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/keyboard_key_rounded_corner" />
            <solid android:color="@color/asphalt" />
            <stroke android:color="@color/fog" android:width="2dp" />
        </shape>
    </item>
    <item android:state_hovered="false" android:drawable="@null">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/keyboard_key_rounded_corner" />
            <solid android:color="@color/asphalt" />
        </shape>
    </item>
</selector>
